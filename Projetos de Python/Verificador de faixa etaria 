print("Bem-vindo ao cinema!")
# Aqui pedimos o nome do usuário e a idade

filme = 'It: A Coisa'
nome = input(f"Digite o seu nome: ")
idade = int(input(f"Digite a sua idade: "))

if idade < 0: # Verifica se a idade é negativa
    print(f"Idade inválida.")
elif idade <= 12: # Verifica se a idade é menor ou igual a 12
    print(f"Você ainda não pode assistir ao {filme} pois a faixa etária é de 18+ ") 
elif idade <= 17: # Verifica se a idade é entre 13 e 17
    print(f"Você" " pode assistir ao {filme} com a supervisão de um adulto.")
elif idade <= 59: # Verifica se a idade é entre 18 e 59
    print(f"Você pode assistir ao {filme} sem restrições.")
else:
    print(f"Você paga meia entrada para assistir ao {filme} e pode assistir sem restrições.") # Verifica se a idade é 60 ou mais