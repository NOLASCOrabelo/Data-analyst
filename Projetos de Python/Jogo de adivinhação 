numero_secreto = 42 # Número secreto para o jogo
print("Bem-vindo ao jogo de adivinhação!")
nome = input("Digite o seu nome: ")
tentativas = 0 # Contador de tentativas
acertou = False

while acertou == False: # Loop até acertar o número
    palpite = int(input("Tente adivinhar o número entre 1 e 100: "))
    tentativas += 1 # Incrementa o contador de tentativas

    if palpite < numero_secreto:
        print("Está frio!")
    elif palpite > numero_secreto:
        print("Está quente!")
    else:
        print(f"Parabéns! Você acertou o {numero_secreto} em {tentativas}")
        acertou = True # Sai do loop se acertar
