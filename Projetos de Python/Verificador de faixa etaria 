filme = 'It: A Coisa'
nome = input(f"Digite o seu nome: ")
idade = int(input(f"Digite a sua idade: "))

if idade < 0:
    print("Idade inválida.")
elif idade <= 12:
    print("Você ainda não pode assistir ao {filme} pois a faixa etária é de 18+ ")
elif idade <= 17:
    print("Você" " pode assistir ao {filme} com a supervisão de um adulto.")
elif idade <= 59:
    print("Você pode assistir ao {filme} sem restrições.")
else:
    print("Você paga meia entrada para assistir ao {filme}.")